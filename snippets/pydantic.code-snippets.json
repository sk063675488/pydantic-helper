{
  "Pydantic BaseModel": {
    "prefix": "pydantic-model",
    "body": [
      "from pydantic import BaseModel, Field",
      "",
      "class ${1:ModelName}(BaseModel):",
      "    ${2:field_name}: ${3:type} = Field(..., description=\"${4:description}\")"
    ],
    "description": "Create a Pydantic v2 BaseModel"
  },

  "Pydantic Field Validator": {
    "prefix": "pydantic-validator",
    "body": [
      "from pydantic import field_validator",
      "",
      "@field_validator('${1:field_name}')",
      "@classmethod",
      "def validate_${1:field_name}(cls, v):",
      "    return v"
    ],
    "description": "Pydantic v2 field validator"
  },

  "Pydantic Model Validator": {
    "prefix": "pydantic-model-validator",
    "body": [
      "from pydantic import model_validator",
      "",
      "@model_validator(mode='after')",
      "def validate_model(self):",
      "    return self"
    ],
    "description": "Pydantic v2 model validator"
  },

  "Pydantic ConfigDict": {
    "prefix": "pydantic-config",
    "body": [
      "from pydantic import ConfigDict",
      "",
      "model_config = ConfigDict(",
      "    from_attributes=True,",
      "    populate_by_name=True",
      ")"
    ],
    "description": "Pydantic v2 ConfigDict"
  }
}
